<h1>New Game</h1>
<div>
<%= @grid %>
</div>

<h1>What is the longest word you can find</h1>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="grid" type="hidden" value="<%= @grid %>" />
  <input type="text" name="word" placeholder="What is your word?">
  <input type="submit" value="Play">
</form>
